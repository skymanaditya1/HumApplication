    <!-- The action bar definitions for the DisplayGraph activity.
    	Each item is a different option. orderInCategory is defines what
    	order objects are shown in. showAsAction defines if the item should
    	be displayed on the action bar or in the overflow menu. -->

    <item
        android:id="@+id/delete_database"
        android:orderInCategory="99"
        android:title="@string/delete_database_string"
